<% content_for :title, "Change a book | Kenneth's Reading List App" %>
<% content_for :my_heading, "Modify your reading list!" %>

<%= simple_form_for @reading, html: { class: 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :author %>
  <%= f.input :completed %>
  <%= f.button :submit %>
  <%= link_to 'Add a bookmark!', new_reading_bookmark_path(@reading.id), class: 'btn btn-outline-primary'  %>
  <%= link_to 'Back to home', readings_path, class: "btn btn-outline-info"  %>
<% end %>

<br>
